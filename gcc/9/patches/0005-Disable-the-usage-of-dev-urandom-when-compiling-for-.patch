Subject: [PATCH 05/32] Disable the usage of /dev/urandom when compiling for
 AmigaOS.

---
 gcc/gcc.c    | 3 +++
 gcc/toplev.c | 2 ++
 2 files changed, 5 insertions(+)

diff --git a/gcc/gcc.c b/gcc/gcc.c
index 0f541e361c4b00a73e45029cebcd7486abca0f08..4b4975d72ebc3642484a696038a28c7d0964121e 100644
--- a/gcc/gcc.c
+++ b/gcc/gcc.c
@@ -9636,22 +9636,25 @@ print_asm_header_spec_function (int arg ATTRIBUTE_UNUSED,
 /* Get a random number for -frandom-seed */
 
 static unsigned HOST_WIDE_INT
 get_random_number (void)
 {
   unsigned HOST_WIDE_INT ret = 0;
+
+#ifndef __amigaos4__
   int fd; 
 
   fd = open ("/dev/urandom", O_RDONLY); 
   if (fd >= 0)
     {
       read (fd, &ret, sizeof (HOST_WIDE_INT));
       close (fd);
       if (ret)
         return ret;
     }
+#endif
 
   /* Get some more or less random data.  */
 #ifdef HAVE_GETTIMEOFDAY
   {
     struct timeval tv;
 
diff --git a/gcc/toplev.c b/gcc/toplev.c
index 397a164068d2a1ede02d9407bd14d8323256c3fc..40b00b0af4146ecf1da44fce9d72a63534ec916e 100644
--- a/gcc/toplev.c
+++ b/gcc/toplev.c
@@ -272,20 +272,22 @@ init_local_tick (void)
 
 HOST_WIDE_INT
 get_random_seed (bool noinit)
 {
   if (!random_seed && !noinit)
     {
+#ifndef __amigaos4__
       int fd = open ("/dev/urandom", O_RDONLY);
       if (fd >= 0)
         {
           if (read (fd, &random_seed, sizeof (random_seed))
               != sizeof (random_seed))
             random_seed = 0;
           close (fd);
         }
+#endif
       if (!random_seed)
 	random_seed = local_tick ^ getpid ();
     }
   return random_seed;
 }
 
